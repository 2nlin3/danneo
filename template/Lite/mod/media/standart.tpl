<article role="article">
	<header>
		<!--if:date:yes--><time datetime="{date:datetime}">{date:1}</time><!--if-->
		<h3><a href="{url}">{title}</a></h3>
	</header>
	<div class="text-content">  
        {image}{text}
    </div>
	<footer>
		<aside><span class="col" title="{langcol}">{langcol}:</span> {total} <span class="hits" title="{langhits}">{langhits}:</span> {hits}</aside>
	</footer>
</article>
